# ============================================================================
# EJEMPLOS DE CONFIGURACIÓN - terraform.tfvars
# ============================================================================
# Copia el ejemplo que necesites a terraform.tfvars

# ============================================================================
# EJEMPLO 1: Solo CPU y Memoria (SIN monitoreo de disco)
# ============================================================================
# Usa este ejemplo si:
# - No tienes CloudWatch Agent instalado
# - Solo quieres monitorear CPU y Memoria
# - No te interesa el uso de disco
#
# Alarmas creadas por instancia: 4 (2 CPU + 2 Memoria)
# ============================================================================

aws_region = "us-east-1"
profile    = "pra_chaptercloudops_lab"

client      = "pragma"
project     = "hefesto"
environment = "dev"
application = "webserver"

common_tags = {
  environment  = "dev"
  project-name = "Modulos Referencia"
  owner        = "tu-email@pragma.com.co"
  provisioned  = "terraform"
}

sns_topic_warning  = "arn:aws:sns:us-east-1:123456789012:alert-warning"
sns_topic_critical = "arn:aws:sns:us-east-1:123456789012:alert-critical"

# NO monitorear discos
monitor_disks = []


